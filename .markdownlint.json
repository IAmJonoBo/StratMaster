{
  "extends": "markdownlint/style/all",
  "rules": {
    "MD013": {
      "line_length": 100,
      "heading_line_length": 100,
      "code_block_line_length": 120,
      "tables": false
    },
    "MD033": {
      "allowed_elements": ["div", "span", "br", "sup", "sub"]
    },
    "MD041": false,
    "MD046": {
      "style": "fenced"
    },
    "MD024": {
      "siblings_only": true
    },
    "MD007": {
      "indent": 4
    }
  }
}