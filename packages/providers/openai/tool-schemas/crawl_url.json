{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://stratmaster.local/schemas/crawl_url.json",
  "title": "Crawl URL",
  "type": "object",
  "properties": {
    "url": { "type": "string", "format": "uri" },
    "max_depth": {
      "type": "integer",
      "minimum": 0,
      "maximum": 3,
      "default": 0
    },
    "allow_subdomains": { "type": "boolean", "default": false }
  },
  "required": ["url"],
  "additionalProperties": false
}
