{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://stratmaster.dev/schemas/research.json",
  "title": "Research Tool",
  "type": "object",
  "additionalProperties": false,
  "oneOf": [{ "required": ["metasearch"] }, { "required": ["crawl"] }],
  "properties": {
    "metasearch": {
      "type": "object",
      "required": ["query"],
      "properties": {
        "query": { "type": "string" },
        "sources": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Optional sources allowlist (e.g., searxng engines)."
        }
      },
      "additionalProperties": false
    },
    "crawl": {
      "type": "object",
      "required": ["url"],
      "properties": {
        "url": { "type": "string", "format": "uri" },
        "max_depth": {
          "type": "integer",
          "minimum": 0,
          "maximum": 3,
          "default": 0
        },
        "respect_robots": { "type": "boolean", "default": true }
      },
      "additionalProperties": false
    }
  }
}
