{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://stratmaster.local/schemas/web_search.json",
  "title": "Web Search",
  "type": "object",
  "properties": {
    "query": { "type": "string", "minLength": 3 },
    "site": {
      "type": "string",
      "description": "Optional site filter, e.g., site:example.com"
    },
    "num_results": {
      "type": "integer",
      "minimum": 1,
      "maximum": 50,
      "default": 10
    }
  },
  "required": ["query"],
  "additionalProperties": false
}
