{
  "$defs": {
    "SourceType": {
      "enum": [
        "web",
        "document",
        "dataset",
        "user_provided"
      ],
      "title": "SourceType",
      "type": "string"
    }
  },
  "$id": "https://schemas.stratmaster.ai/source/2024-10-01",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "properties": {
    "id": {
      "title": "Id",
      "type": "string"
    },
    "language": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "BCP-47 language tag",
      "title": "Language"
    },
    "tags": {
      "items": {
        "type": "string"
      },
      "title": "Tags",
      "type": "array"
    },
    "title": {
      "title": "Title",
      "type": "string"
    },
    "type": {
      "$ref": "#/$defs/SourceType"
    },
    "url": {
      "format": "uri",
      "maxLength": 2083,
      "minLength": 1,
      "title": "Url",
      "type": "string"
    }
  },
  "required": [
    "id",
    "type",
    "title",
    "url"
  ],
  "title": "Source",
  "type": "object"
}