{
  "$defs": {
    "Source": {
      "additionalProperties": false,
      "properties": {
        "id": {
          "title": "Id",
          "type": "string"
        },
        "language": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "BCP-47 language tag",
          "title": "Language"
        },
        "tags": {
          "items": {
            "type": "string"
          },
          "title": "Tags",
          "type": "array"
        },
        "title": {
          "title": "Title",
          "type": "string"
        },
        "type": {
          "$ref": "#/$defs/SourceType"
        },
        "url": {
          "format": "uri",
          "maxLength": 2083,
          "minLength": 1,
          "title": "Url",
          "type": "string"
        }
      },
      "required": [
        "id",
        "type",
        "title",
        "url"
      ],
      "title": "Source",
      "type": "object"
    },
    "SourceType": {
      "enum": [
        "web",
        "document",
        "dataset",
        "user_provided"
      ],
      "title": "SourceType",
      "type": "string"
    }
  },
  "$id": "https://schemas.stratmaster.ai/provenance/2024-10-01",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "properties": {
    "crawl_policy_snapshot": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Crawl Policy Snapshot"
    },
    "fetch_time_utc": {
      "description": "UTC timestamp the document was fetched",
      "format": "date-time",
      "title": "Fetch Time Utc",
      "type": "string"
    },
    "original_timezone": {
      "default": "UTC+02:00",
      "description": "Timezone offset preserved for SAST-aligned logging",
      "title": "Original Timezone",
      "type": "string"
    },
    "parser_version": {
      "title": "Parser Version",
      "type": "string"
    },
    "sha256": {
      "title": "Sha256",
      "type": "string"
    },
    "source": {
      "$ref": "#/$defs/Source"
    }
  },
  "required": [
    "source",
    "fetch_time_utc",
    "sha256",
    "parser_version"
  ],
  "title": "Provenance",
  "type": "object"
}